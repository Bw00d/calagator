<div class="vcard">
	<h1 class="fn org"><%= @venue.title %></h1>
	
	<% if !@venue.address.blank? %>
		<div class='address'><%= @venue.address %></div>
	<% end %>
	
	<% if !@venue.street_address.blank? or !@venue.locality.blank? or !@venue.region.blank? or !@venue.postal_code.blank? or !@venue.country.blank? %>
		<div class="adr">
			<% if !@venue.street_address.blank? %>
				<div class="street-address"><%= @venue.street_address %></div>
			<% end %>
			<% if !@venue.locality.blank? %>
				<span class="locality"><%= @venue.locality %></span>
			<% end %>
			<% if !@venue.region.blank? %>
				, <span class="region"><%= @venue.region %></span> 
			<% end %>
			<% if !@venue.postal_code.blank? %>
				<span class="postal-code"><%= @venue.postal_code %></span>
			<% end %>
			<% if !@venue.country.blank? %>
				<div class='country-name'><%= @venue.country %><div>
			<% end %>
			(<a href='<%=@venue.google_maps_url%>'>map</a>)
		</div>
	<% end %>
	
	<% if !@venue.url.blank? %>
		<div><a href='<%= @venue.url %>' class='url'><%= @venue.url %></a></div>
	<% end %>

	<% if !@venue.email.blank? %>
	<div><a href='mailto:<%= @venue.email %>' class='email'><%= @venue.email %></a></div>
	<% end %>
		
	<% if !@venue.telephone.blank? %>
	<div class='tel'><%= @venue.telephone %></div>
	<% end %>


	<div class='single_view_right'>
		<div id='edit_link'>
			<h4>Something not right?</h4>
			<p>You can <%= link_to "edit this venue", edit_venue_url %>.</p>
		</div>
    <div class="metadata">
      Created <%= @venue.created_at %>
      Modified <%= @venue.updated_at %>
    </div>
	</div>
</div>
