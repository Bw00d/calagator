<% form_for(@event) do |f| %>
<fieldset>
  <legend><%= @event.new_record? ? "New event" : "Edit event" %></legend>
  <p>You can <%= @event.new_record? ? "enter" : "edit" %> the details of your event below.  The more information we have about your event, the easier it will be for people to find it.</p>

  <%= error_messages_for :event %>

  <div>
    <%= f.label :title, "Event Name" %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :venue_id, "Venue" %>
    <%= collection_select(:event, :venue_id, Venue.find(:non_duplicates, :order => :title), :id, :title, :include_blank => true) %>
  </div>
  <div>
    <%= link_to 'Add a new venue', new_venue_url %>
  </div>

	<div id="event_times" class='no_label'>
		<div id="start_time">
			<%= f.label :start_time %>
			<%= text_field_tag 'start_date', @event.start_time ? @event.start_time.to_date : '', :id => 'date_start', :class => 'date_picker' %>
			<%= text_field_tag 'start_time', @event.start_time ? @event.start_time.strftime('%I:%M %p') : '', :id => 'time_start', :class => 'time_picker' %>
		</div>
		<div id="end_time">
			<%= f.label :end_time %>
			<%= text_field_tag 'end_date', @event.end_time ? @event.end_time.to_date : '', :id => 'date_end', :class => 'date_picker' %>
			<%= text_field_tag 'end_time', @event.end_time ? @event.end_time.strftime('%I:%M %p') : '', :id => 'time_end', :class => 'time_picker' %>
		</div>
	</div>
	<div>
		<%= f.label :url, "Web Link" %>
		<%= f.text_field :url %>
	</div>
	<div>
		<%= f.label :description %>
		<%= f.text_area :description %>
	</div>
	<div class='help'>
		(HTML formatting allowed)
	</div>
	<% if false %>
	<%# TODO implement tags %>
	<div>
		<%= f.label :tags %>
		<span class="note">(comma separated keywords)</span><br />
		<input type="text" name="event_tags" value="" id="event_tags">
	</div>
	<% end %>
	<div class='trap'>
		<%= label 'trap', 'field', "Leave this field blank or we'll think you're a robot." %>
		<%= text_field_tag 'trap_field', params[:trap_field] %>
	</div>
	<div class='no_label'><%= f.submit(@event.new_record? ? "Create" : "Update") %></div>
</fieldset>
<% end %>
