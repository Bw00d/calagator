<% form_tag "http://www.google.com/calendar/event" do %>
  <%= hidden_field_tag :action, "TEMPLATE" %>
  <%= hidden_field_tag :text, @event.title %>
  <%= hidden_field_tag :dates, format_google_timespan(@event) %>
  <%= hidden_field_tag :details, @event.description %>
  <%= hidden_field_tag :location, %{#{@event.venue ? @event.venue.title : ''}#{@event.venue ? (@event.venue.geocode_address.blank? ? '' : " #{@event.venue.geocode_address}") : ''}} %>
  <%= hidden_field_tag :trp, "true" %>
  <%= hidden_field_tag :sprop, url_for('/') %>
  <%= hidden_field_tag :sprop, "name:Calagator" %>
  <%= submit_tag "Add to Google Calendar" %>
<% end %>
