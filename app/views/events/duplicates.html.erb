<div id="events_duplicates">
  <h1>Duplicate Events</h1>

  <div id='list_filters'>
    <h3>Show events with a duplicate</h3>
    <ul>
      <li><%= link_to_unless_current "Title", url_for(:action => 'duplicates', :type => 'title') %></li>
      <li><%= link_to_unless_current "Start Time", url_for(:action => 'duplicates', :type => 'start_time') %></li>
      <li><%= link_to_unless_current "Both Times", url_for(:action => 'duplicates', :type => 'start_time,duration') %></li>
      <li><%= link_to_unless_current "URL", url_for(:action => 'duplicates', :type => 'url') %></li>
      <li><%= link_to_unless_current "Description", url_for(:action => 'duplicates', :type => 'description') %></li>
      <li><%= link_to_unless_current "Venue", url_for(:action => 'duplicates', :type => 'venue_id') %></li>
      <li><%= link_to_unless_current "Source", url_for(:action => 'duplicates', :type => 'source_id') %></li>
      <li>-----</li>
      <li><%= link_to_unless_current "Any Field", url_for(:action => 'duplicates', :type => 'any') %></li>
      <li><%= link_to_unless_current "All Fields", url_for(:action => 'duplicates', :type => 'all') %></li>
    </ul>
  </div>
    <%= form_tag :action => "squash_many_duplicates", :method => :post %>
    <div style="color: blue;">
      Select only one set of master and duplicate events. If you select an unrelated event, it will be merged into the same single master record.
    </div>
    <div id='list_items'>
      <table>
        <tr>
          <th>Master?</th><th>Duplicate?</th><th>Event title</th><th>Start Time</th><th>Venue</th>
        </tr>
        
          <% last = {}; first_cycle = true; dupe_set = 1; dupe_count = 0
          for event in @events

            if @type != :any && @type != :all
              changed = false
              [@type].flatten.each do |t|
                changed = true if event.read_attribute(t) != last[t]
                last[t] = event.read_attribute(t)
              end
              if changed && !first_cycle %>
            </tr>
            <tr>
              <th>Master?</th><th>Duplicate?</th><th>Event title</th><th>Start Time</th><th>Venue</th>
            </tr>
            <% dupe_set += 1
              end
              first_cycle = false
            end %>

            <tr class="<%= cycle('odd', 'even') %>">
              <% # if @type != :any && @type != :all %>
              <td><%= radio_button_tag("master_event_id", event.id) %></td>
              <td><%= check_box_tag("duplicate_event_id_#{event.id}", event.id) %></td>
              <% # end %>
              <td>
              <%= link_to(event.title, event_url(event)) %>
              <%= "[DUPLICATE OF #{event.duplicate_of_id}]" if event.duplicate_of_id %>
              </td>
              <td><%= event.start_time %></td>
              <td><%= event.venue.title unless event.venue.nil? %></td>
              <% dupe_count += 1 %>
            </tr>
            <% end %>
      </table>

      <% # if @type != :any && @type != :all %>
      <% if dupe_count > 1 %>
      <ul>
        <li>Checked items will be deleted.</li>
      </ul>
      <%= submit_tag "Squash Duplicates" %>
      <% else %>
        No duplicates found
      <% end %>
    </div>
  </form>
  </div>
